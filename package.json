{
  "name": "slowlint",
  "bin": {
    "slowlint": "bin/bin.js"
  },
  "version": "1.0.8",
  "description": "Slowly implement linting",
  "repository": {
    "type": "git",
    "url": "git@github.com:jehy/slowlint.git"
  },
  "main": "slowlint.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint slowlint.js test/test.js bin",
